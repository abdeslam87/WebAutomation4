<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Selenium Test Suite" parallel="true">

    <parameter name="browser" value="Chrome"/>
    <parameter name="url" value="https://www.ebay.com"/>

    <!--if you gonna use for cloud & mac you can use "OS X"
   for local you should use "mac" or "windows"-->
    <parameter name="platform" value="windows"/>

    <parameter name="cloud" value="false"/>
    <parameter name="envName" value="browserstack"/>
    <parameter name="browserVersion" value="87.0.4280.141"/>

    <test name="Automation tests">
        <classes>
            <class name="com.ebaytest.HomePageValidations"/>
        </classes>
    </test>
</suite>
